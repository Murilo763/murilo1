<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/if_background">


    <TextView
        android:id="@+id/titulo_login"
        android:layout_width="159dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="122dp"
        android:fontFamily="casual"
        android:text="Login"
        android:textColor="#040303"
        android:textSize="60sp" />

    <Button
        android:id="@+id/logar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/campo_senha"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="160dp"
        android:text="ENTRAR" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_below="@id/titulo_login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="164dp"
        app:srcCompat="@drawable/logo_institutos_federa" />

    <EditText
        android:id="@+id/campo_nome"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="89dp"
        android:background="@color/white"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="usuÃ¡rio"
        android:textColor="#CCC1C1"
        android:textColorHint="#A10606" />

    <EditText
        android:id="@+id/campo_senha"
        android:layout_width="236dp"
        android:layout_height="56dp"
        android:layout_below="@id/campo_nome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="88dp"
        android:background="@color/white"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:hint="senha"
        android:inputType="textPassword"
        android:textColor="#4E3B3B" />
</RelativeLayout>