<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/if_background">


    <TextView
        android:id="@+id/titulo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        android:fontFamily="sans-serif"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#8AF40F"
        android:textSize="60sp" />

    <Button
        android:id="@+id/logar"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/campo_senha"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="151dp"
        android:backgroundTint="#FF5722"
        android:text="ENTRAR" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_below="@id/titulo_login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="161dp"
        android:textAlignment="center"
        app:srcCompat="@drawable/logo_institutos_federa" />

    <EditText
        android:id="@+id/campo_nome"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="85dp"
        android:background="@color/white"
        android:backgroundTint="#83FF5722"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="usuÃ¡rio"
        android:textColor="#952805"
        android:textColorHint="#A10606"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/campo_senha"
        android:layout_width="236dp"
        android:layout_height="56dp"
        android:layout_below="@id/campo_nome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="89dp"
        android:background="@color/white"
        android:backgroundTint="#7EFF5722"
        android:ems="10"
        android:hint="senha"
        android:inputType="textPassword"
        android:textColor="#4E3B3B"
        android:textColorHint="#9C2A06"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/remember"
        android:layout_width="251dp"
        android:layout_height="33dp"
        android:layout_below="@id/campo_nome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="74dp"
        android:text="Lembre-se de mim"
        android:textColor="#FF5722"
        android:textSize="20sp" />
</RelativeLayout>